    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/header_home_page.css">
    <link rel="stylesheet" href="/public/css/selected_ticket.css">
    <link rel="stylesheet" href="/public/css/footer.css">
</head>

<body>
    
	<%- include ('../partials/header', {isLoggedIn: isLoggedIn, user: user}) %>

	<form onsubmit="submitFilterForm(event)">
		<div id="booking" class="section">
			<div class="section-center">
				<div class="container">
					<div class="row">
						<div class="booking-form">
							<form>
								<div class="form-group">
									<div class="form-checkbox">
										<!-- <label for="roundtrip">
											<input type="radio" id="roundtrip" name="flight-type">
											<span></span>Khứ hồi
										</label> -->
										<label for="one-way">
											<input type="radio" id="one-way" name="flight-type">
											<span></span>Một chiều
										</label>
										<!-- <label for="multi-city">
											<input type="radio" id="multi-city" name="flight-type">
											<span></span>Nhiều chặng
										</label> -->
									</div>
								</div>
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<span class="form-label">Sân bay khởi hành</span>
											<!-- <input name="airportDepart" class="form-control" type="text" placeholder="City or airport" required> -->
										
											<select class="form-control form-select airport-depart" aria-label="Default select example" name="airportDepart" required>
												<option value="0" selected>Chọn điểm đi</option>
												<option value="1">VTB (Bà Rịa – Vũng Tàu)</option>
												<option value="2">BDI (Bình Định)</option>
												<option value="3">CMU (Cà Mau)</option>
												<option value="4">CTH (Cần Thơ)</option>
												<option value="5">DNA (Đà Nẵng)</option>
												<option value="6">DLA (Đắk Lắk)</option>
												<option value="7">DBI (Điện Biên)</option>
												<option value="8">GLA (Gia Lai)</option>
												<option value="9">HNO (Hà Nội)</option>
												<option value="10">HPG (Hải Phòng)</option>
												<option value="11">HCM (Thành phố Hồ Chí Minh)</option>
												<option value="12">KHA (Khánh Hòa)</option>
												<option value="13">KGI (Kiên Giang)</option>
												<option value="14">LDG (Lâm Đồng)</option>
												<option value="15">NAN (Nghệ An)</option>
												<option value="16">PYE (Phú Yên)</option>
												<option value="17">QBI (Quảng Bình)</option>
												<option value="18">QNA (Quảng Nam)</option>
												<option value="19">QNH (Quảng Ninh)</option>
												<option value="20">THA (Thanh Hóa)</option>
												<option value="21">TTH (Thừa Thiên Huế)</option>
											</select>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<span class="form-label">Sân bay đến</span>
											<select class="form-control form-select airport-depart" aria-label="Default select example" name="airportArrive" required>
												<option value="0" selected>Chọn điểm đi</option>
												<option value="1">VTB (Bà Rịa – Vũng Tàu)</option>
												<option value="2">BDI (Bình Định)</option>
												<option value="3">CMU (Cà Mau)</option>
												<option value="4">CTH (Cần Thơ)</option>
												<option value="5">DNA (Đà Nẵng)</option>
												<option value="6">DLA (Đắk Lắk)</option>
												<option value="7">DBI (Điện Biên)</option>
												<option value="8">GLA (Gia Lai)</option>
												<option value="9">HNO (Hà Nội)</option>
												<option value="10">HPG (Hải Phòng)</option>
												<option value="11">HCM (Thành phố Hồ Chí Minh)</option>
												<option value="12">KHA (Khánh Hòa)</option>
												<option value="13">KGI (Kiên Giang)</option>
												<option value="14">LDG (Lâm Đồng)</option>
												<option value="15">NAN (Nghệ An)</option>
												<option value="16">PYE (Phú Yên)</option>
												<option value="17">QBI (Quảng Bình)</option>
												<option value="18">QNA (Quảng Nam)</option>
												<option value="19">QNH (Quảng Ninh)</option>
												<option value="20">THA (Thanh Hóa)</option>
												<option value="21">TTH (Thừa Thiên Huế)</option>
											</select>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-3">
										<div class="form-group">
											<span class="form-label">Từ Ngày</span>
											<input class="form-control" type="date" name="dateDepartBegin">
										</div>
									</div>
									<div class="col-md-3">
										<div class="form-group">
											<span class="form-label">Đến ngày</span>
											<input class="form-control" type="date" name="dateDepartEnd">
										</div>
									</div>
									<div class="col-md-2">
										<div class="form-group">
											<span class="form-label">Người lớn (18+)</span>
											<select class="form-control" name="numOfAdult">
												<option>1</option>
												<option>2</option>
												<option>3</option>
												<option>4</option>
											</select>
											<span class="select-arrow"></span>
										</div>
									</div>
									<div class="col-md-2">
										<div class="form-group">
											<span class="form-label">Trẻ em (0-17)</span>
											<select class="form-control" name="numOfChildren">
												<option>0</option>
												<option>1</option>
												<option>2</option>
												<option>3</option>
												<option>4</option>
											</select>
											<span class="select-arrow"></span>
										</div>
									</div>
								</div>
								<div class="row">
									<!-- <div class="col-md-3">
										<div class="form-group">
											<span class="form-label">Hạng vé</span>
											<select class="form-control" name="typeTicket">
												<option>Hạng phổ thông</option>
												<option>Hạng thương gia</option>
											</select>
											<span class="select-arrow"></span>
										</div>
									</div> -->
									<div class="col-md-3">
										<div class="form-btn">
											<button class="submit-btn">Tìm kiếm chuyến bay</button>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>

	<script src="/public/js/filterticket.js"></script>
	
    <%- include('../partials/footer') %>
