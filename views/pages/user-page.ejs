        <link rel="stylesheet" href="/public/css/content_user_page.css">

    </head>
    <body>
        <!-- Header -->
        <%- include('../partials/header') %>
        
        <!--Container-->
        <div id="content">
            <div class="container">
                <div class="main-body"> 
                      <!-- /Breadcrumb -->
                  <div class="row gutters-sm">
                        <div class="col-md-4 mb-3">
                          <div class="card">
                            <div class="card-body">
                              <div class="d-flex flex-column align-items-center text-center">
                                <img src="/public/img/user/cat1.jpg" alt="Admin" class="rounded-circle" width="150">
                              </div>
                            </div>
                          </div>
                          <div class="card mt-3">
                            <div class="balance-content-wraper">
                              <label class="balance-title">
                                Số tiền trong tài khoản
                              </label>
                              <p class="balance"> <%= new Intl.NumberFormat(["ban", "id"]).format(user.balance) %> VND</p>
                            </div>
                          </div>

                          <div class="card mt-3">
                            <div class="deposit-content-wraper">
                              <label class="deposit-title">
                                Nạp tiền vào tài khoản
                              </label>
                              <div class="input-amount-content">
                                <input type="text" name="deposit" id="input-amount" placeholder="ex: 1000000">
                                <p class="monetary">VND</p>
                              </div>
                              
                              <button class="deposit-btn">Nạp</button>
                            </div>
                          </div>
                        </div>

                        <div class="col-md-8">
                          <div class="card mb-3">
                            <div class="card-body">
                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                  <%= user.ten_khach_hang %>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">Gender</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                  <%= user.gioi_tinh %>
                                </div>
                              </div>
                              <hr>
                              
                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">Birthday</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= user.ngay_sinh %>
                                </div>
                              </div>
                              <hr>

                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                  <%= user.email %>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                  <%= user.sdt %>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                  <%= user.dia_chi %>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-12">
                                  <a class="btn btn-info " target="__blank" href="#">Edit</a>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                  </div>
            
