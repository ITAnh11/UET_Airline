<div id="header-wrapper">
    <div class="container-wrapper">
        <div class="nav-home">
            <a href="home-page">
                <img src="/public/img/header/Logo ĐH Công Nghệ-UET.png" alt="logo" class="logo">
                <div class="info">
                    <p class="name">UET Airline</p>
                    <p class="slogan">Sải cánh vươn cao</p>
                </div> 
            </a>
        </div>
        <div class="nav-open">
            <div class="nav-sitetop">
                <% if (typeof isLoggedIn !== 'undefined') { %>
                    <% if (isLoggedIn) { %>
                        <a class="linkToUser onHover <%= user.ma_khach_hang %> ahref">Xin Chào: <%= user.ten_khach_hang %> </a>
                        <a id="logout" class="logout onHover ahref" >Đăng Xuất</a>
                        <!-- <script src="/public/js/logout.js"></script> -->
                    <% } %>
                <% } else { %>
                    <a href="/login" class="linkTologin onHover ahref">Đăng nhập</a>
                    <a href="/register" class="linkRegister onHover ahref" >Đăng ký</a>
                    
                <% } %>
            </div>

            <div class="booking-ticket">
                <a href="filter-ticket?airportDepart=0&airportArrive=0&dateDepartBegin=&dateDepartEnd=&numOfChildren=0&numOfAdult=1" class="linkToFilterTicket">Đặt vé ngay</a>
            </div>
        </div>
    </div>
    <script src="/public/js/header.js"></script>
</div>